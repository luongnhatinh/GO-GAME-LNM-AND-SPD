{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Raylib Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Game.cpp",
                "${workspaceFolder}/UI.cpp",
                "${workspaceFolder}/board.cpp",
                "${workspaceFolder}/AI.cpp",
                "-I${workspaceFolder}/raylib/raylib_lib/include",
                "-L${workspaceFolder}/raylib/raylib_lib/lib",
                "-o",
                "${workspaceFolder}/build/game.exe",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-g"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Prepare Build",
            "type": "shell",
            "command": "if not exist .\\build mkdir .\\build && copy /Y .\\raylib\\raylib_lib\\lib\\raylib.dll .\\raylib\\raylib_lib\\lib\\raylib.dll",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/C"
                    ]
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Prepare",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Prepare Build",
                "Build Raylib Project"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\raylib\\w64devkit\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}