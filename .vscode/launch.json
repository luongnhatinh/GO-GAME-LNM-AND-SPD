{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Raylib",
            "type": "cppdbg",
            "request": "launch",
            // Chỉ đường tới file .exe đã build
            "program": "${workspaceFolder}/build/game.exe",
            "args": [],
            "stopAtEntry": false,
            // Quan trọng: Chạy chương trình từ thư mục 'build'
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false, // Mở cửa sổ console riêng
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe", // <-- Sửa lại đường dẫn MinGW của bạn
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // Tự động Build trước khi chạy
            "preLaunchTask": "Build and Prepare" // <-- Phải khớp với tên task "mẹ"
        }
    ]
}